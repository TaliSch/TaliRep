@model MyBlogEmpty.ViewModels.AdminViewModel
@{
    ViewBag.Title = "Posts Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.LoginStarter = "signOut";
    ViewBag.LoginViewname = "Admin";
}

<script src="@Url.Content("~/Scripts/AdminIndex.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/login.js")" type="text/javascript"></script>

<button  id="home">Home</button> @Html.Partial("login")

<header class="enabled">Posts Manager</header>

 @*<a id="createNew" href="/Admin/Create" class="button">Create New</a>*@
<p>
<button id="createNew">CreateNew</button>
</p>
@*<button id="createNew">Create New</button>*@


<table class ="enabled">
    <tr>
        <th>
            Name
        </th>
        <th>
            Last Saved
        </th>
        <th></th>
    </tr>

    
@foreach (var item in Model.PostDatas)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @{var dateStr = item.Date.ToString("g");} 
            @dateStr
        </td>
        <td>
            @{var id = item.ID; var title = item.Title; }
            <div id="@id">
            <button name="@id" class ="edit">Edit</button> | <button name ="@id" class="delete">Delete</button> <span hidden class="deleteSure"><button class="sure">Sure?</button><button name ="@id" class="cancel">Cancel</button></span>
           </div>     
        </td>
    </tr>
}
</table>

