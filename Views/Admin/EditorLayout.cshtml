@model MyBlogEmpty.Models.Post
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>

  
    <script type="text/javascript" src="@Url.Content("~/Scripts/tinymce/js/tinymce/tinymce.min.js")"></script>

    <script src="@Url.Content("~/Scripts/AdminEditor.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/lz-string-1.3.3.js")"></script>

</head>

<body>
    @RenderSection("Top", false)

    @{var viewname = @Html.ViewContext.RouteData.GetRequiredString("action");
      var formid = viewname + "Form";}
    <form method ="post" id="@formid">   
    @*<form method ="post" id="EditorForm">*@
       
        <p>
            <label>Name</label>@Html.TextBoxFor(model => model.Title,  new { id = "title", oninvalid="invalidName()", oninput ="invalidName()"})
        </p>
       
        @*<textarea id="content" name="content" class="tinymce" style="width:100%">
        </textarea>*@

        @Html.TextAreaFor(model=>model.Content, new { id = "editor", name = "content"})
        
        <button type="submit">Submit</button>
        @*<div><a class="btn submitbtn" id="submitbtn"+@viewname><span>Submit</span></a></div>*@

         @RenderSection("Inside", false)

    </form>

   @RenderSection("Buttom", false)
</body>
</html>
