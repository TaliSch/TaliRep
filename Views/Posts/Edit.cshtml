@model MyBlogEmpty.Models.PostData
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Posts/EditorLayout.cshtml";
}


<script src="@Url.Content("~/Scripts/PostsEdit.js")" type="text/javascript"></script>


<form method ="post" action="@Url.Action("Save")" id="editForm">   
    <input type="hidden" id="id-hidden" value="@Model.ID" />
    <p>
        <label>Name</label>@Html.TextBoxFor(model => model.Name,  new { id = "name", oninvalid="invalidName", oninput ="invalidName()"})
    </p>
    @Html.TextAreaFor(model => model.Data, new { id = "editor"})
    </form>


